<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.BookDetailActivity">

    <!-- Toolbar -->
    <RelativeLayout
        android:id="@+id/toolbarRL"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar02">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_white"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Details"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bookOptionsLl"
        android:layout_below="@id/toolbarRL"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Book Preview Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Book Preview -->
                <RelativeLayout
                    android:id="@+id/bookPreviewRL"
                    android:layout_width="110dp"
                    android:layout_height="150dp"
                    android:layout_marginEnd="5dp"
                    android:background="@color/gray02">

                    <ImageView
                        android:id="@+id/coverView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </RelativeLayout>

                <!-- Book Title -->
                <TextView
                    android:id="@+id/titleTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/bookPreviewRL"
                    android:text="Book Title"
                    style="@style/TextAppearance.MaterialComponents.Headline6" />

                <!-- Book Info -->
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleTv"
                    android:layout_toEndOf="@id/bookPreviewRL">

                    <!-- Category -->
                    <TableRow>
                        <TextView
                            android:id="@+id/genreLabelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genre"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/gray02"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/genreTv"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/gray02"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/authorLabelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Author: "
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/gray02"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/authorTv"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/gray02"
                            android:textSize="14sp" />
                    </TableRow>


                    <TableRow android:layout_marginTop="5dp">
                        <TextView
                            android:id="@+id/dateLabelTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/gray02"
                            android:textSize="14sp" />
                        <TextView
                            android:id="@+id/dateTv"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="N/A"
                            android:layout_marginEnd="5dp"
                            android:textColor="@color/gray02"
                            android:textSize="14sp" />
                    </TableRow>

                    <TableRow android:layout_marginTop="5dp" >
                        <TextView
                            android:textColor="@color/gray02"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/sizeLabelTv"
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:text="Size"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            android:textColor="@color/gray02"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/sizeTv"
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:text="N/A"
                            android:layout_marginEnd="5dp"/>

                    </TableRow>

                    <!--View Count-->
                    <TableRow android:layout_marginTop="5dp" >
                        <TextView
                            android:textColor="@color/gray02"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/viewLabelTv"
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:text="Views"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            android:textColor="@color/gray02"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/viewTv"
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:text="N/A"
                            android:layout_marginEnd="5dp"/>

                    </TableRow>

                    <!--Donload Count-->
                    <TableRow android:layout_marginTop="5dp" >
                        <TextView
                            android:textColor="@color/gray02"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/downloadLabelTv"
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:text="Downloads"
                            android:layout_marginEnd="5dp"/>

                        <TextView
                            android:textColor="@color/gray02"
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/downloadTv"
                            style="@style/TextAppearance.MaterialComponents.Headline6"
                            android:text="N/A"
                            android:layout_marginEnd="5dp"/>

                    </TableRow>

                    <!--PAges-->
<!--                    <TableRow android:layout_marginTop="5dp" >-->
<!--                        <TextView-->
<!--                            android:textColor="@color/gray02"-->
<!--                            android:textSize="14sp"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:id="@+id/pagesLabelTv"-->
<!--                            style="@style/TextAppearance.MaterialComponents.Headline6"-->
<!--                            android:text="Pages"-->
<!--                            android:layout_marginEnd="5dp"/>-->

<!--                        <TextView-->
<!--                            android:textColor="@color/gray02"-->
<!--                            android:textSize="14sp"-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_weight="1"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:id="@+id/pagesTv"-->
<!--                            style="@style/TextAppearance.MaterialComponents.Headline6"-->
<!--                            android:text="N/A"-->
<!--                            android:layout_marginEnd="5dp"/>-->

<!--                    </TableRow>-->
                </TableLayout>
            </RelativeLayout>

            <!-- Book Description -->
            <TextView
                android:id="@+id/descriptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="The description of the book"
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Actions -->
    <LinearLayout
        android:id="@+id/bookOptionsLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/design_default_color_primary">

        <!-- Read Button -->
        <Button
            android:id="@+id/readBookBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Read"
            android:drawableTop="@drawable/ic_book_white"
            android:layout_weight="1" />

        <!-- Download Button -->
        <Button
            android:id="@+id/downloadBookBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Download"
            android:drawableTop="@drawable/ic_download_white"
            android:layout_weight="1" />

        <!-- Favorite Button -->
        <Button
            android:id="@+id/favoriteBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add To Favorite"
            android:drawableTop="@drawable/ic_favorite_border_white"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>
