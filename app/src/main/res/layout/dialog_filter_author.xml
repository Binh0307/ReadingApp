<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/primary_bg"
    android:gravity="center_horizontal">

    <!-- Author input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/author"
        android:textSize="16sp"
        android:textColor="@color/primary_tint"
        android:layout_marginBottom="8dp"
        android:gravity="start" />

    <EditText
        android:id="@+id/authorEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_author_name"
        android:inputType="text"
        android:textColor="@color/primary_tint"
        android:textColorHint="@color/primary_hint"
        android:layout_marginBottom="12dp"
        android:padding="12dp" />

    <!-- Sort Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_by"
        android:textSize="16sp"
        android:textColor="@color/primary_tint"
        android:layout_marginBottom="8dp"
        android:gravity="start" />

    <Spinner
        android:id="@+id/sortSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="12dp" />

    <!-- Genre Selection TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/genres"
        android:textSize="16sp"
        android:textColor="@color/primary_tint"
        android:layout_marginBottom="8dp"
        android:gravity="start" />

    <TextView
        android:id="@+id/genreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/select_genres"
        android:padding="12dp"
        android:textColorHint="@color/primary_tint"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_more_blac"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="12dp" />

    <!-- Condition RadioGroup -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_of_search"
        android:textSize="16sp"
        android:textColor="@color/primary_tint"
        android:layout_marginBottom="8dp"
        android:gravity="start" />

    <RadioGroup
        android:id="@+id/conditionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <RadioButton
            android:id="@+id/andRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/and"
            android:textColor="@color/primary_tint"
            android:checked="true" />

        <RadioButton
            android:id="@+id/orRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_tint"
            android:text="@string/or" />
    </RadioGroup>

    <!-- Date Filter in one row -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date"
        android:textSize="16sp"
        android:textColor="@color/primary_tint"
        android:layout_marginBottom="8dp"
        android:gravity="start" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- From Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/from"
            android:textSize="14sp"
            android:textColor="@color/primary_tint"
            android:layout_marginEnd="8dp" />

        <!-- Start Date Display -->
        <TextView
            android:id="@+id/selectedStartDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date"
            android:textSize="12sp"
            android:textColor="@color/primary_tint"
            android:paddingEnd="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- To Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/to"
            android:textSize="14sp"
            android:textColor="@color/primary_tint"
            android:layout_marginEnd="8dp" />

        <!-- End Date Display -->
        <TextView
            android:id="@+id/selectedEndDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_date"
            android:textColor="@color/primary_tint"
            android:textSize="12sp"
            android:paddingEnd="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

