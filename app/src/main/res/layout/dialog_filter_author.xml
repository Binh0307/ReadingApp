<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Author input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="start" />

    <EditText
        android:id="@+id/authorEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Author Name"
        android:inputType="text"
        android:layout_marginBottom="12dp"
        android:padding="12dp" />

    <!-- Sort Spinner -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order by:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="start" />

    <Spinner
        android:id="@+id/sortSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="12dp" />

    <!-- Genre Selection TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Genres:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="start" />

    <TextView
        android:id="@+id/genreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select Genres"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/ic_more_blac"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="12dp" />

    <!-- Condition RadioGroup -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type of search:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="start" />

    <RadioGroup
        android:id="@+id/conditionRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <RadioButton
            android:id="@+id/andRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AND"
            android:checked="true" />

        <RadioButton
            android:id="@+id/orRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR" />
    </RadioGroup>

    <!-- Date Filter in one row -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:gravity="start" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <!-- From Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From:"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <!-- Start Date Display -->
        <TextView
            android:id="@+id/selectedStartDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:textSize="12sp"
            android:paddingEnd="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="12dp"
            android:clickable="true"
            android:focusable="true" />

        <!-- To Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To:"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <!-- End Date Display -->
        <TextView
            android:id="@+id/selectedEndDateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date"
            android:textSize="12sp"
            android:paddingEnd="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Apply Filter Button -->
    <Button
        android:id="@+id/filterButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apply Filter"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center" />

    <!-- Reset Button -->
    <Button
        android:id="@+id/resetButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Filter"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground"
        android:textColor="@android:color/white"
        android:layout_gravity="center" />

</LinearLayout>
