<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <!-- Your search and RecyclerView content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchEt"
            android:background="@color/primary_bg"
            android:drawableStart="@drawable/ic_search_white"
            android:drawableTint="@color/primary_tint"
            android:hint="Search"
            android:padding="10dp"
            android:textColor="@color/primary_tint"
            android:textColorHint="@color/primary_hint"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/bookRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>


    <!-- FloatingActionButton above other elements -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addBookButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:tint="@color/primary_tint"
        android:backgroundTint="@color/primary_text_button"
        android:src="@drawable/ic_upload_white"
        android:contentDescription="Add Book"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp" />

</FrameLayout>
